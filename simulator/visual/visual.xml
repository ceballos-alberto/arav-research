<!-- ############################################################################

     This document contains the desciption of an external camera used to
     visualize the simulation >> Customized Gazebo client.
     
     ############################################################################ -->

<robot name = "arav" xmlns:xacro = "http://www.ros.org/wiki/xacro">

	<xacro:camera
	
		LinkName = "visualCamera_link" 
		JointName = "visualCamera_joint" 
		CamXoffset = "1.2" 
		CamYoffset = "0.0" 
		CamZoffset = "0.5"
		CamRollAngle="0.20" 
		CamYawAngle = "3.15" 
		CamUpdateRate = "60" 
		FOV = "1.75" 
		CamWidth = "1920" 
		CamHeight = "1080"
		CamMinDistance = "0.001"
		CamMaxDistance = "100.0"
		NoiseIntensity = "0.0"
		
	/>
	
</robot>

